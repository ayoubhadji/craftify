{% extends 'baselog.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block body %}
<div class="event-details-container">
    <div class="event-header">
        <h1>{{ evenement.nom }}</h1>
        <p class="event-date">
            <strong><i class="fas fa-calendar-alt"></i> Date:</strong> 
            {{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : '' }} - 
            {{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : '' }}
        </p>
    </div>

    <div class="event-content">
        <div class="event-image">
            <img src="{{ evenement.image }}" alt="Event Image" class="event-detail-image">
        </div>

        <div class="event-description">
            <p><i class="fas fa-map-marker-alt"></i> <strong>Lieu:</strong> {{ evenement.lieu }}</p>
            <p><i class="fas fa-users"></i> <strong>Capacit√©:</strong> {{ evenement.capacite }}</p>
            <p><i class="fas fa-cogs"></i> <strong>Type:</strong> {{ evenement.typeEvenement }}</p>
            <p><i class="fas fa-money-bill-wave"></i> <strong>Prix:</strong> {{ evenement.prix }} TND</p>
            <p><i class="fas fa-user-tie"></i> <strong>Organisateur:</strong> {{ evenement.organisateur }}</p>
            <p><i class="fas fa-info-circle"></i> <strong>Description:</strong> {{ evenement.description }}</p>
        </div>
    </div>

    <!-- Countdown Timer -->
    <div class="countdown-container">
        <p id="countdown" class="countdown-timer">‚è≥ Loading...</p>
    </div>

    <div class="event-actions">
        <button class="btn btn-participate"><i class="fas fa-check-circle"></i> Participate</button>
        <a href="{{ path('app_evenement_front') }}" class="btn btn-back">Back to List</a>
    </div>
</div>

<style>
/* General Styling */
.event-details-container {
    width: 85%;
    margin: 40px auto;
    background-color:rgb(249, 232, 232);
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.27);
}

.event-header {
    text-align: center;
    margin-bottom: 30px;
}

.event-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c3e50;
    margin: 0;
}

.event-date {
    font-size: 1.1rem;
    color: #7f8c8d;
}

.event-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 30px;
}

.event-image {
    width: 45%;
    height: auto;
}

.event-detail-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.event-description {
    width: 50%;
    font-size: 1.2rem;
    color: #34495e;
    line-height: 1.6;
}

.event-description p {
    margin: 10px 0;
}

.event-description i {
    color: #FF5733;
    margin-right: 10px;
}

/* Countdown Timer */
.countdown-container {
    text-align: center;
    margin-top: 30px;
}

.countdown-timer {
    font-size: 2.5rem;
    font-weight: bold;
    color:rgb(255, 0, 0); /* Red for urgency */
    background:rgb(249, 198, 154); /* Light yellow */
    padding: 20px;
    border-radius: 15px;
    display: inline-block;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.39);
    animation: pulse 1.5s infinite alternate;
}

/* Animation to make it pop */
@keyframes pulse {
    from { transform: scale(1); }
    to { transform: scale(1.05); }
}

/* Buttons */
.event-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    margin-top: 30px;
}

.btn {
    padding: 12px 25px;
    font-size: 1.1rem;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    width: 200px;
    text-align: center;
}

.btn-participate {
    background-color: #FF5733;
    color: white;
    border: none;
}

.btn-participate:hover {
    background-color: #e04e2b;
    transform: scale(1.05);
}

.btn-back {
    background-color:rgb(235, 99, 20);
    color: white;
    text-decoration: none;
    text-align: center;
    display: block;
}

.btn-back:hover {
    background-color:rgb(248, 66, 0);
}

.btn:focus {
    outline: none;
}
</style>

<script>
    function startCountdown(eventEndDate) {
        let countDownDate = new Date(eventEndDate).getTime();

        let x = setInterval(function() {
            let now = new Date().getTime();
            let distance = countDownDate - now;

            if (distance < 0) {
                document.getElementById("countdown").innerHTML = "üéâ Event Closed!";
                clearInterval(x);
                return;
            }

            let days = Math.floor(distance / (1000 * 60 * 60 * 24));
            let hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            let seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById("countdown").innerHTML = `‚è≥ ${days}d ${hours}h ${minutes}m ${seconds}s remaining`;
        }, 1000);
    }

    // Start the countdown using the event end date
    startCountdown("{{ evenement.dateFin|date('Y-m-d H:i:s') }}");
</script>

<!-- Font Awesome (Ensure you include this in your base template if not done already) -->
{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
{% endblock %}
{% endblock %}
