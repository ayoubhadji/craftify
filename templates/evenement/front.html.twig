{% extends 'baselog.html.twig' %}

{% block title %}Evenement Index{% endblock %}

{% block body %}
<div class="content-container">
    <!-- Image container -->
    <div class="image-container">
        <img src="{{ asset('img/mainphoto.png') }}" alt="Event Image" class="event-banner">
        <div class="image-text">Liste Évènement</div>
    </div>

    <!-- Events display in horizontal cards -->
    <div class="event-cards-container">
        {% for evenement in evenements %}
            <div class="event-card">
                <img src="{{ evenement.image }}" alt="Image" class="event-card-image">
                <div class="event-card-content">
                    <h2>{{ evenement.nom }}</h2>
                    <p class="description">{{ evenement.description }}</p>
                    <p><strong>Date:</strong> {{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : '' }} - {{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : '' }}</p>
                    <p><strong>Lieu:</strong> {{ evenement.lieu }}</p>
                    <p><strong>Capacité:</strong> {{ evenement.capacite }}</p>
                    <p><strong>Type:</strong> {{ evenement.typeEvenement }}</p>
                    <p><strong>Prix:</strong> {{ evenement.prix }} TND</p>
                    <p><strong>Organisateur:</strong> {{ evenement.organisateur }}</p>
                </div>
            </div>
        {% else %}
            <p class="no-records">No events found.</p>
        {% endfor %}
    </div>
</div>

<style>
/* Overall page container */
.content-container {
    width: 100%;
    margin: 0 auto;
    padding: 20px;
    background-color: #D7C7A1; /* Dark beige background */
}

/* Image Styling */
.image-container {
    width: 100%;
    height: 200px;
    overflow: hidden;
    text-align: center;
    margin-bottom: 20px;
    position: relative;
}

.event-banner {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

.image-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #3E2C41;
    font-size: 36px;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4);
}

/* Event Cards Container */
.event-cards-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    padding: 20px;
}

/* Individual Event Card */
.event-card {
    display: flex;
    width: 900px;
    background: #fdf1da;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    transition: 0.3s;
}

.event-card:hover {
    transform: scale(1.02);
}

/* Event Image */
.event-card-image {
    width: 300px;
    height: 100%;
    object-fit: cover;
    border-top-left-radius: 15px;
    border-bottom-left-radius: 15px;
}

/* Event Details */
.event-card-content {
    padding: 20px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.event-card-content h2 {
    color: #C89156;
    font-size: 24px;
    margin-bottom: 10px;
}

.description {
    font-size: 16px;
    color: #3E2C41;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    max-width: 100%;
}
</style>
{% endblock %}
