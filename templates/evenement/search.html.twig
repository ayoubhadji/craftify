{% extends 'base2.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block body %}
<div class="content-container">

 <!-- Image container -->
    <div class="image-container">
        <img src="{{ asset('img/mainphoto.png') }}" alt="Event Image" class="event-banner">
        <div class="image-text">Search Results</div>
    </div>

    <!-- "Back" Button to return to the index -->
    <a href="{{ path('app_evenement_index') }}" class="create-btn" style="margin-bottom:20px;">Back</a>
    
    <div class="table-container">
        <div class="table-wrapper">
            <table class="event-table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Date Debut</th>
                        <th>Date Fin</th>
                        <th>Lieu</th>
                        <th>Capacite</th>
                        <th>Type Evenement</th>
                        <th>Prix</th>
                        <th>Organisateur</th>
                        <th>Image</th>
                        <th>Date Creation</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for evenement in evenements %}
                    <tr>
                        <td>{{ evenement.id }}</td>
                        <td>{{ evenement.nom }}</td>
                        <td class="description">{{ evenement.description }}</td>
                        <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ evenement.lieu }}</td>
                        <td>{{ evenement.capacite }}</td>
                        <td>{{ evenement.typeEvenement }}</td>
                        <td>{{ evenement.prix }}</td>
                        <td>{{ evenement.organisateur }}</td>
                        <td><img src="{{ evenement.image }}" alt="Image" class="event-image"></td>
                        <td>{{ evenement.dateCreation ? evenement.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="action-btn show-btn">Show</a>
                            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="action-btn edit-btn">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="13" class="no-records">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>


<style>
/* Overall page container */
.content-container {
    width: 100%;
    margin: 0 auto;
    padding: 20px;
    background-color: #D7C7A1; /* Dark beige background */
}

/* Image Styling */
.image-container {
    width: 100%;
    height: 200px;
    overflow: hidden;
    text-align: center;
    margin-bottom: 20px;
    position: relative;
}

.event-banner {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

.image-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #3E2C41; /* Dark brown color */
    font-size: 36px;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4); /* Shadow for readability */
}

/* Table container */
.table-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.table-wrapper {
    width: 100%;
    overflow-x: auto; /* Enables horizontal scrolling */
    -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
}

.event-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    background-color: #f9f9f9;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.event-table td,
.event-table th {
    padding: 12px 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

/* Truncate long description */
.description {
    max-width: 150px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.event-table th {
    background-color: #C89156;
    color: white;
    font-weight: bold;
    text-transform: uppercase;
}

.event-table tbody tr:nth-child(odd) {
    background-color: #FDF1DA;
}

/* Hover effect for rows */
.event-table tbody tr:hover {
    background-color:rgb(221, 144, 71); /* Color when hovered */
    color: white;
    cursor: pointer;
}

/* Image Styling in Table */
.event-image {
    width: 80px;
    height: 60px;
    object-fit: cover;
    border-radius: 8px;
}

/* Button Styling */
.create-btn-container {
    text-align: center;
    margin-top: 70px;
}

.create-btn {
    background-color: #C89156;
    color: white;
    padding: 15px 30px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: bold;
    transition: 0.3s;
    font-size: 20px;
}

.create-btn:hover {
    background-color: #B86B2F;
    color: #fff;
}
</style>


{% endblock %}