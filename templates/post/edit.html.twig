{% extends 'baselog.html.twig' %}

{% block title %}Edit Post{% endblock %}

{% block body %}
<br><br><br><br>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Card container -->
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Edit Post</h3>
                </div>
                <div class="card-body">
                    <p class="text-muted text-center">Update your post details below</p>

                    <!-- Post Form -->
                    <div class="post-form">
                        {{ form_start(form) }}
                        
                        <div class="form-group">
                            {{ form_label(form.type_post) }}
                            {{ form_widget(form.type_post, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="form-group mt-3">
                            {{ form_label(form.contenu) }}
                            {{ form_widget(form.contenu, { 'attr': {'class': 'form-control', 'rows': 4} }) }}
                        </div>

                        <div class="form-group mt-3">
                            {{ form_label(form.mediaFile) }}
                            {{ form_widget(form.mediaFile, { 'attr': {'class': 'form-control-file'} }) }}
                        </div>

                        <div class="form-group mt-3">
                            {{ form_label(form.tranche_dage) }}
                            {{ form_widget(form.tranche_dage, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                         <div class="form-group mt-3">
                            <button type="submit" class="btn btn-success w-100">Update Post</button>
                        </div>
            

                        {{ form_end(form) }}
                    </div>
                </div>
                
                <!-- Card Footer -->
                <div class="card-footer text-center">
                    <a href="{{ path('app_post_index') }}" class="btn btn-secondary">Back to List</a>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-info ml-2">View Post</a>

                    <div class="mt-3">
                        {{ include('post/_delete_form.html.twig') }}
                    </div>
                </div>
               
        </div>
    </div>
</div>
{% endblock %}
