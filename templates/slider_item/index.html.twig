{% extends 'base2.html.twig' %}

{% block title %}Slider Items{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center g-4">
            {% for slider_item in slider_items %}
                <div class="col-md-4 d-flex justify-content-center">
                    <div class="card border-0 shadow-sm h-100 text-center" style="width: 100%; max-width: 300px;">
                        <img class="card-img-top" src="{{ asset(slider_item.imagePath) }}" alt="{{ slider_item.altText }}" 
                             style="height: 250px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">{{ slider_item.altText }}</h5>
                            <form method="post" action="{{ path('app_slider_item_delete', {id: slider_item.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">No records found</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
