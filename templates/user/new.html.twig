{% extends 'base2.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    <h1 class="page-title">Create New User</h1>

    <div class="form-container">
        {{ include('user/_form.html.twig') }}
    </div>

    <div class="buttons-container">
        <div class="back-btn-container">
            <a href="{{ path('app_user_index') }}" class="back-btn">Back to list</a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Appliquer un arrière-plan gris à toute la page */
        body {
            background-color: rgb(0, 0, 0); /* Gris clair */
            color: #333; /* Texte en gris foncé pour un bon contraste */
        }

        /* Styles spécifiques à la page */
        .page-title {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 30px;
            color: rgb(125, 177, 27);
            background-color: rgb(0, 0, 0);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
            font-family: 'Arial', sans-serif;
        }

        .form-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff; /* Fond blanc pour le formulaire */
            border-radius: 8px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1); /* Ombre subtile pour le formulaire */
        }

        .buttons-container {
            text-align: center;
            margin-top: 20px;
        }

        .back-btn {
            background-color: rgb(158, 149, 20);
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1rem;
        }

        .back-btn:hover {
            background-color: rgb(125, 177, 27);
        }
    </style>
{% endblock %}
