{% extends 'base2.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="page-title">User</h1>

    <div class="content-container">
        <div class="table-container">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Code</th>
                        <td>{{ user.code }}</td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td>{{ user.role }}</td>
                    </tr>
                    <tr>
                        <th>Sexe</th>
                        <td>{{ user.sexe }}</td>
                    </tr>
                    <tr>
                        <th>Date_naissance</th>
                        <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Date_join</th>
                        <td>{{ user.dateJoin ? user.dateJoin|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Tel</th>
                        <td>{{ user.tel }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ user.address }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="buttons-container">
            <div class="back-btn-container">
                <a href="{{ path('app_user_index') }}" class="back-btn">Back to list</a>
            </div>

            <div class="edit-btn-container">
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="edit-btn">Edit</a>
            </div>

            <div class="delete-form-container">
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Appliquer un arrière-plan gris à toute la page */
        body {
            background-color: rgb(0, 0, 0); /* Gris foncé */
            color: #fff; /* Texte clair */
        }

        /* Styles pour le titre */
        .page-title {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 30px;
            color: rgb(125, 177, 27);
            background-color: rgb(0, 0, 0);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
            font-family: 'Arial', sans-serif;
        }

        /* Conteneur principal */
        .content-container {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-top: 30px;
        }
        .table-container {
            width: 200%; /* Occuper toute la largeur */
            margin: 0 auto; /* Centrer la table */
            padding: 20px; /* Ajouter du padding autour du tableau */
        }

        .table {
            width: 200%;
            border-collapse: separate;
            border-spacing: 0 20px; /* Espacer encore plus les lignes */
        }

        .table th, .table td {
            padding: 25px 40px; /* Augmenter l'espacement horizontal et vertical pour les cellules */
            border: 1px solid #ddd; /* Bordure subtile */
            text-align: left;
        }

        .table th {
            background-color: rgb(0, 0, 0);
            color: rgb(125, 177, 27);
        }

        .table td {
            background-color: #f4f4f4;
            color: #333;
        }

        /* Conteneur de boutons */
        .buttons-container {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 70px;
            flex: 0 0 100%; /* Limiter la largeur des boutons */
        }

        .back-btn-container, .edit-btn-container, .delete-form-container {
            text-align: center;
        }

        .back-btn, .edit-btn {
            background-color: rgb(158, 149, 20);
            color: white;
            padding: 12px 25px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1.2rem;
        }

        .back-btn:hover, .edit-btn:hover {
            background-color: rgb(125, 177, 27);
        }

        /* Styles du formulaire de suppression */
        .delete-btn {
            background-color: rgb(255, 69, 58); /* Rouge pour le bouton Delete */
            color: white;
            padding: 12px 25px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1.2rem;
            border: none; /* Enlever la bordure par défaut */
            cursor: pointer; /* Ajouter un curseur pointer au survol */
            
        }

        .delete-btn:hover {
            background-color: rgb(224, 55, 50); /* Rouge foncé au survol */
        }
    </style>
{% endblock %}
