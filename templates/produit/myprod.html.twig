{% extends 'baselog.html.twig' %}

{% block title %}Mes Produits{% endblock %}

{% block body %}

<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s" 
     style="background-image: url('{{ asset('img/test1.JPG') }}'); 
            background-size: cover; 
            background-position: center; 
            min-height: 500px; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            text-align: center;">
    
    <div class="container">
        <h1 class="display-1 text-white animated slideInDown mb-3">Produits</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Produits</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container my-5">
    <h1 class="text-center">Mes Produits</h1>

    <div class="row">
        {% for produit in produits %}
            <div class="col-lg-4 col-md-6">
                <div class="card">
                    <img class="card-img-top" src="{{ asset('uploads/images/' ~ (produit.imgUrl ?: 'default.jpg')) }}" alt="{{ produit.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.nom }}</h5>
                        <p class="card-text">{{ produit.description|slice(0, 100) }}...</p>
                        <p class="fw-bold">{{ produit.prix }} €</p>
                        <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-primary">Voir</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <p>Aucun produit trouvé.</p>
            </div>
        {% endfor %}
    </div>
</div>


{% endblock %}
