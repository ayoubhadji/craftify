{% extends 'baselog.html.twig' %} 

{% block title %}D√©tails du Produit{% endblock %}

{% block body %}
<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s" 
     style="background-image: url('{{ asset('img/test1.JPG') }}'); 
            background-size: cover; 
            background-position: center; 
            min-height: 500px; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            text-align: center;">
    
    <div class="container">
        <h1 class="display-1 text-white animated slideInDown mb-3">D√©tails du Produit</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="{{ path('app_produit_index') }}">Produits</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">{{ produit.nom|default('Produit inconnu') }}</li>
            </ol>
        </nav>
    </div>
</div>

<h1 class="mt-5 text-center">Produit : {{ produit.nom|default('Non sp√©cifi√©') }}</h1>

<div class="container mt-4">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description|default('Pas de description disponible') }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }} ‚Ç¨</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock|default('Non pr√©cis√©') }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if produit.imgUrl %}
                        <img src="{{ asset('uploads/images/' ~ produit.imgUrl) }}" alt="{{ produit.nom }}" class="img-fluid" style="max-width: 200px;">
                    {% else %}
                        <span>Aucune image disponible</span>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Artisan</th>
                <td>{{ produit.artisan ? produit.artisan.nom : 'Non attribu√©' }}</td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Bouton Ajouter au Panier -->
<div class="container text-center mt-4">
    <a href="#" class="btn btn-success btn-lg">üõí Ajouter au panier</a>
</div>

{% endblock %}
