<form method="post" action="{{ path('app_aventurier_delete', {'id': aventurier.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet aventurier ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ aventurier.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt me-2"></i> Supprimer l'Aventurier
    </button>
</form>
