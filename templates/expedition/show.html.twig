{% extends 'base2.html.twig' %}

{% block title %}Détails de l'Expédition{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center text-dark fw-bold mb-4">Détails de l'Expédition</h2>

    <div class="card shadow-lg p-4">
        <table class="table table-striped table-bordered table-hover">
            <tbody>
                <tr>
                    <th class="bg-primary text-white">ID</th>
                    <td>{{ expedition.id }}</td>
                </tr>
                <tr>
                    <th class="bg-primary text-white">Titre de l'expédition</th>
                    <td>{{ expedition.titre }}</td>
                </tr>
                <tr>
                    <th class="bg-primary text-white">Objectif</th>
                    <td>{{ expedition.objectif }}</td>
                </tr>
                <tr>
                    <th class="bg-primary text-white">Date de début</th>
                    <td>{{ expedition.datedebut ? expedition.datedebut|date('d/m/Y') : 'Non spécifiée' }}</td>
                </tr>
                <tr>
                    <th class="bg-primary text-white">Date de fin</th>
                    <td>{{ expedition.datefin ? expedition.datefin|date('d/m/Y') : 'Non spécifiée' }}</td>
                </tr>
               
               
                <tr>
                    <th class="bg-primary text-white">Aventurier</th>
                    <td>{{ expedition.aventurier ? expedition.aventurier.prenom ~ ' ' ~ expedition.aventurier.nom : 'Non attribué' }}</td>
                </tr>
               
                <tr>
                  <th class="bg-primary text-white">Statut</th>
                    <td>{{ expedition.videoUrl }}</td>  
                    
                </tr>
            </tbody>
        </table>
     
 
       
    </div>

    <div class="d-flex justify-content-between mt-4">
        <!-- Retour à la liste des expéditions -->
        <a href="{{ path('app_expedition_index') }}" class="btn btn-outline-primary d-flex align-items-center px-4 py-2">
            <i class="fas fa-arrow-left me-2"></i> Retour à la liste
        </a>

        <div class="d-flex align-items-center">
            <!-- Bouton Modifier -->
            <a href="{{ path('app_expedition_edit', {'id': expedition.id}) }}" class="btn btn-warning d-flex align-items-center px-4 py-2 me-3">
                <i class="fas fa-edit me-2"></i> Modifier
            </a>
           <a href="{{ path('app_quiz_new', {'expeditionId': expedition.id}) }}">Choisir cette expédition</a>

            <!-- Formulaire de suppression sécurisé avec CSRF Token -->
            <form action="{{ path('app_expedition_delete', {'id': expedition.id}) }}" method="post" 
                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette expédition ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ expedition.id) }}">
                <button type="submit" class="btn btn-danger d-flex align-items-center px-4 py-2">
                    <i class="fas fa-trash-alt me-2"></i> Supprimer
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
