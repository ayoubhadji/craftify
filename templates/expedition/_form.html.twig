{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

<div class="row">
    {% for field in form %}
        <div class="col-md-6 mb-4">
            <div class="form-group">
                <!-- Label with custom styling -->
                {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-bold text-muted'}}) }}
                
                <!-- Form input field with Bootstrap class for better appearance -->
                {{ form_widget(field, {'attr': {'class': 'form-control rounded-3 shadow-sm'}}) }}

                {# Display errors in red, with spacing below input #}
                {% if field.vars.errors|length > 0 %}
                    <div class="text-danger mt-2">
                        {{ form_errors(field) }}
                    </div>
                {% endif %}
            </div>
        </div>
    {% endfor %}
</div>

<div class="d-flex justify-content-end mt-5">
    <button type="submit" class="btn btn-primary rounded-3 px-4 py-2 shadow-sm">
        {{ button_label|default('Enregistrer') }}
    </button>
</div>

{{ form_end(form) }}
