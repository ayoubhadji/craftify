{% extends 'base2.html.twig' %}
{% block title %}Participation Index{% endblock %}

{% block body %}
<div class="content-container">
    <!-- Image container -->
    <div class="image-container">
        <img src="{{ asset('img/mainphoto.png') }}" alt="Event Image" class="event-banner">
        <div class="image-text">Liste Participant</div>
    </div>

    <!-- Table container with horizontal scrolling -->
    <div class="table-container">
        <div class="table-wrapper">
            <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prix</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participation in participations %}
            <tr>
                <td>{{ participation.id }}</td>
                <td>{{ participation.prix }}</td>
                <td>{{ participation.statut }}</td>
                <td>
                    <a href="{{ path('app_participation_show', {'id': participation.id}) }}" class="action-btn show-btn">Show</a>
                    <a href="{{ path('app_participation_edit', {'id': participation.id}) }}" class="action-btn edit-btn">Edit</a>
                </td> 
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>

        <!-- Button to create a new participant -->
        <div class="create-btn-container">
        <a href="{{ path('app_participation_new') }}" class="create-btn">Create New</a>
        </div>
    </div>
</div>

<style>
/* Overall page container */
.content-container {
    width: 100%;
    margin: 0 auto;
    padding: 20px;
    background-color: #D7C7A1; /* Dark beige background */
}

/* Image Styling */
.image-container {
    width: 100%;
    height: 200px;
    overflow: hidden;
    text-align: center;
    margin-bottom: 20px;
    position: relative;
}

.event-banner {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}

.image-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #3E2C41; /* Dark brown color */
    font-size: 36px;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4); /* Shadow for readability */
}

/* Table container */
.table-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.table-wrapper {
    width: 100%;
    overflow-x: auto; /* Enables horizontal scrolling */
    -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
}

.table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    background-color: #f9f9f9;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.table td,
.table th {
    padding: 12px 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}


.table th {
    background-color: #C89156;
    color: white;
    font-weight: bold;
    text-transform: uppercase;
}

.table tbody tr:nth-child(odd) {
    background-color: #FDF1DA;
}

/* Hover effect for rows */
.table tbody tr:hover {
    background-color:rgb(221, 144, 71); /* Color when hovered */
    color: white;
    cursor: pointer;
}


/* Button Styling */
.create-btn-container {
    text-align: center;
    margin-top: 70px;
}

.create-btn {
    background-color: #C89156;
    color: white;
    padding: 15px 30px;
    border-radius: 10px;
    text-decoration: none;
    font-weight: bold;
    transition: 0.3s;
    font-size: 20px;
}

.create-btn:hover {
    background-color: #B86B2F;
    color: #fff;
}
</style>
{% endblock %}
