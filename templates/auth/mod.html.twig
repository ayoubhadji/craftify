{% extends 'baselog.html.twig' %}

{% block title %}Modifier Mon Profil{% endblock %}

{% block body %}
<!-- HEADER AVEC IMAGE DE FOND -->
<div class="container-fluid page-header wow fadeIn" data-wow-delay="0.1s" 
     style="background-image: url('{{ asset('img/test1.JPG') }}'); 
            background-size: cover; 
            background-position: center; 
            min-height: 500px; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            text-align: center;">
    
    <div class="container">
        <h1 class="display-1 text-white animated slideInDown mb-3">Modifier Profil</h1> 
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="#">Profile</a></li> 
                <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Modifier</li> 
            </ol>
        </nav>
    </div>
</div>

<!-- FORMULAIRE D'ÉDITION DU PROFIL -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h2 class="text-center mb-4">Modifier Mon Profil</h2>
                    
                    <!-- IMAGE DE PROFIL -->
                    <div class="text-center mb-3">
                        <img src="{{ asset('img/avatar.png') }}" 
                             alt="Photo de profil" 
                             class="rounded-circle mb-3" 
                             width="70" height="70">
                    </div>

                    {{ form_start(form) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.nom, 'Nom') }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.email, 'Email') }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.code, 'Code') }}
                        {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.role, 'Role') }}
                        {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.sexe, 'Sexe') }}
                        {{ form_widget(form.sexe, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.date_naissance, 'Date de naissance') }}
                        {{ form_widget(form.date_naissance, {'attr': {'class': 'form-control'}}) }}
                    </div>


                    <div class="mb-3">
                        {{ form_label(form.tel, 'Téléphone') }}
                        {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.address, 'Adresse') }}
                        {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                        <a href="{{ path('app_profile') }}" class="btn btn-secondary">Annuler</a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
